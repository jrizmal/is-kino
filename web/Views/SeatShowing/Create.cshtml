@model web.Models.SeatShowing

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>SeatShowing</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SeatID" class="control-label"></label>
                <select asp-for="SeatID" class ="form-control" asp-items="ViewBag.SeatID"></select>
            </div>
            <div class="form-group">
                <label asp-for="ShowingID" class="control-label"></label>
                <select asp-for="ShowingID" class ="form-control" asp-items="ViewBag.ShowingID"></select>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Taken" /> @Html.DisplayNameFor(model => model.Taken)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

